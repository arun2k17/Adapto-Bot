{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "fallbackText": "clockCard",
  "body": [
    {
      "id": "ac-input-face",
      "type": "Input.ChoiceSet",
      "isMultiSelect": false,
      "value": "clock-1",
      "choices": [
        {
          "type": "Input.Choice",
          "title": "Clock 1",
          "value": "clock-1"
        },
        {
          "type": "Input.Choice",
          "title": "Clock 2",
          "value": "clock-2"
        }
      ]
    },
    {
      "id": "ac-img-1",
      "type": "Image",
      "url": "https://i.ibb.co/GtZ6DyP/clock-1.jpg"
    },
    {
      "id": "ac-input-toggle",
      "type": "Input.Toggle",
      "title": "Real time clock",
      "value": "false"
    }
  ]
}
