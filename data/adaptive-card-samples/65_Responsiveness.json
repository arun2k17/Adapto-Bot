{
  "type": "AdaptiveCard",
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.5",
  "body": [
    {
      "type": "TextBlock",
      "text": "Responsiveness Test Card",
      "size": "Large",
      "weight": "Bolder"
    },
    {
      "type": "Container",
      "style": "emphasis",
      "items": [
        {
          "type": "TextBlock",
          "text": "Layout of **veryNarrow**",
          "size": "Large",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = veryNarrow",
          "wrap": true,
          "targetWidth": "veryNarrow"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atMost:veryNarrow",
          "wrap": true,
          "targetWidth": "atMost:veryNarrow"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atLeast:veryNarrow",
          "wrap": true,
          "targetWidth": "atLeast:veryNarrow"
