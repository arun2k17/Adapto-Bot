      ]
    },
    {
      "type": "Container",
      "style": "good",
      "items": [
        {
          "type": "TextBlock",
          "text": "Layout of **narrow**",
          "size": "Large",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = narrow",
          "wrap": true,
          "targetWidth": "narrow"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atMost:narrow",
          "wrap": true,
          "targetWidth": "atMost:narrow"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atLeast:narrow",
          "wrap": true,
          "targetWidth": "atLeast:narrow"
        }
      ]
    },
    {
      "type": "Container",
      "style": "warning",
      "items": [
        {
          "type": "TextBlock",
          "text": "Layout of **standard**",
          "size": "Large",
          "wrap": true
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = standard",
          "wrap": true,
          "targetWidth": "standard"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atMost:standard",
          "wrap": true,
          "targetWidth": "atMost:standard"
        },
        {
          "type": "TextBlock",
          "text": "targetWidth = atLeast:standard",
          "wrap": true,
          "targetWidth": "atLeast:standard"
